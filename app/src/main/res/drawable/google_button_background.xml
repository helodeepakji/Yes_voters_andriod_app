<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color of the button -->
    <solid android:color="@color/transparent" />  <!-- White background or use any color you like -->

    <!-- Set the corner radius (rounding of the corners) -->
    <corners android:radius="20dp" />  <!-- Adjust the radius to make the corners rounded -->

    <!-- Set the border (stroke) around the button -->
    <stroke
        android:width="2dp"
        android:color="@color/app_button_bg_color" />


</shape>
